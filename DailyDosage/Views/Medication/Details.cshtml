@model DailyDosage.ViewModels.DetailsMedicationViewModel
@{ 
    var photoPath = "/images/" + (Model.Medication.PhotoPath);
}
<h1>Medication Details</h1>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Category</th>
        <th>Dosage</th>
    </tr>
    <tr>
        <td>@Model.Name</td>
        <td>@Model.Description</td>
        <td>@Model.Category</td>
        <td>@Model.Dosage</td>

    </tr>

    <tr>
        
     
        <td>

            <img src="@photoPath" asp-append-version="true" />
            
            
        </td>

          

    </tr>
    
</table>